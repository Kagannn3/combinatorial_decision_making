# Use an official Python runtime as a parent image
FROM python:3.8-slim

# Set the working directory inside the container
WORKDIR /app

# Copy only the necessary files into the container
COPY mcp_solver.py input_data1.json ./

# Install PuLP package
RUN pip install --no-cache-dir pulp

# Make script executable
RUN chmod +x mcp_solver.py

# Command to run the Python script
CMD ["python", "./mcp_solver.py"]

docker build -t mcp_solver .

docker run -v /path/to/local/data:/app/input_data -it mcp_solver
